set nocompatible

filetype off

filetype plugin on
filetype indent on

" --- general settings ---
set backspace=indent,eol,start
set ruler
set number
set showcmd
set incsearch
set hlsearch
set ignorecase
set smartcase
set clipboard^=unnamed,unnamedplus
set cursorline
set cursorcolumn
set showmatch
set tabstop=4
set shiftwidth=4
set autoindent

syntax on

set mouse=r
